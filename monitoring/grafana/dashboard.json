{
  "dashboard": {
    "title": "Spotify MCP Server - Overview",
    "tags": ["spotify", "mcp", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(spotify_mcp_tool_requests_total[5m])",
            "legendFormat": "{{ tool }} - {{ status }}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(spotify_mcp_tool_requests_total{status=\"error\"}[5m])",
            "legendFormat": "{{ tool }}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Request Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(spotify_mcp_tool_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(spotify_mcp_tool_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(spotify_mcp_tool_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "spotify_mcp_cache_hit_rate",
            "legendFormat": "Hit Rate"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "max": 1,
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "Circuit Breaker States",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "spotify_mcp_circuit_breaker_state",
            "legendFormat": "{{ name }} - {{ state }}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Rate Limit Remaining",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "spotify_mcp_rate_limit_remaining"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Health Check Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "spotify_mcp_health_check{status=\"healthy\"}",
            "legendFormat": "{{ check }}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Cache Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "spotify_mcp_cache_memory_bytes",
            "legendFormat": "Memory Usage"
          }
        ],
        "yaxes": [
          {
            "format": "bytes"
          }
        ]
      },
      {
        "id": 9,
        "title": "Top Tools by Request Count",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "topk(10, sum by (tool) (spotify_mcp_tool_requests_total))",
            "format": "table",
            "instant": true
          }
        ]
      }
    ]
  }
}
